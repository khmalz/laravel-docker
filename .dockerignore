# Ignore everything by default
*

# Allow necessary files and directories
!/.env.example
!/artisan
!/composer.json
!/composer.lock
!/package.json
!/vite.config.js
!/webpack.mix.js
!/phpunit.xml
!/server.php

# Allow specific directories
!/app/
!/bootstrap/
!/config/
!/database/
!/docker/
!/public/
!/resources/
!/routes/
!/tests/
!/lang/

# Development-only files (exclude)
/.git
/.github
/.idea
/.vscode
/.editorconfig
/.gitattributes
/.gitignore
/.styleci.yml

# Dependency directories (should be installed inside container)
/node_modules/
/vendor/
/storage/*.key

# Build assets (should be built inside container)
/public/css/
/public/js/
/public/build/

# Environment files (except example)
/.env
!/.env.example

# Log files
*.log
*.sqlite

# Cache files
.phpunit.result.cache
*.cache